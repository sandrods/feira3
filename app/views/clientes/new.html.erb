<% content_for :title do %>
	<h1><strong>Novo Cliente</strong></h1>
<% end %>

<%= error_messages_for :cliente %>

<%= form_for(:cliente, :url => collection_url) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>

	<div class="buttons clear">
		<%= f.submit 'Salvar' %> ou <%= link_to 'Voltar para Lista', collection_url, :class=>'link' %>
	</div>
<% end %>
