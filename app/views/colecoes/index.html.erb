<% content_for :title do %>
	<h1><strong>Coleções</strong></h1>
	<%= cool_button('Nova Coleção', new_resource_url) %>
<% end %>

<table class="lista" cellpadding="0" cellspacing="0" width="100%">
  <tr>
  </tr>
  <%- @colecoes.each do |colecao|%>
  <tr <%= cycle('', 'class="even"') %>>
    <td width="100%"><%= colecao.descricao %></td>
    
      <td><%=link_to 'Editar', edit_resource_url(colecao), :class=>'link' %></td>
      <td><%=link_to image_tag('trash.gif'), resource_url(colecao), :confirm => 'Tem certeza?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>
