<% content_for :title do %>
	<h1><strong>Nova Compra</strong></h1>
<% end %>

<%= error_messages_for :compra %>

<% form_for(:compra, :url => collection_url) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>

	<div class="buttons clear">
		<%= f.submit 'Salvar' %> ou <%= link_to 'Voltar para Lista', collection_url, :class=>'link' %>
	</div>
<% end %>
