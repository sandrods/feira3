	<div class="form">

		<div class="linha first">
			<div class="t3">
				<%= f.label :data, "Data" %>			
				<%= f.date_field :data, :class=>'t3' %>
				<%= error_message_on @registro, 'data' %>
			</div>
			<div class="t9">
				<%= f.label :descricao, "Descrição" %>
				<%= f.text_field :descricao, :class=>'t9'%>
				<%= error_message_on @registro, 'descricao' %>			
			</div>
			
			<br class="clear"/>

			<div class="t4">
				<%= f.label :valor, "Valor" %>
				<%= f.currency_field :valor, :class=>'t4' %>
				<%= error_message_on @registro, 'valor' %>
			</div>

			<div class="t6">

				<br/>
				<%= f.radio_button :cd, "C" %>
				<%= f.label :cd, "Crédito", :value=>"C", :class=>'inline'%>
				<br/>
				<%= f.radio_button :cd, "D" %>
				<%= f.label :cd, "Débito", :value=>"D", :class=>'inline' %>
				
				<%= error_message_on @registro, 'cd' %>
			</div>

		</div>

	</div>
