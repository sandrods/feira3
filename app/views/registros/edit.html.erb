<h3><strong>Edição de Registro</strong></h3> <br/>
<%= form_for(@registro, :remote => true) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>

	<div class="buttons clear">
		<%= f.submit 'Salvar' %> <div class="link"><%= link_to("Excluir este Registro", registro_url(@registro), :method => :delete, :remote=>true, :confirm => "Confirma Exclusão?" ) %>
	</div>
<% end %>

