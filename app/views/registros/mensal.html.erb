<% content_for :title do %>
	<h1><strong>Fluxo de Caixa Mensal</strong></h1>
	<%= cool_button('Novo Registro', new_resource_url) %>
<% end %>

<table class="cal" cellpadding=0 cellspacing=0>
	<tr>
		<th>Segunda</th>
		<th>Terça</th>
		<th>Quarta</th>
		<th>Quinta</th>
		<th>Sexta</th>
		<th>Sábado</th>
		<th>Domingo</th>
	</tr>
	<% @cal.weeks.each do |week| %>
	<tr>
		<%= render :partial => 'day', :collection=>week %>
	</tr>
	<% end %>
</table>