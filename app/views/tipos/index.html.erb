<% content_for :title do %>
	<h1><strong>Tipos de Produtos</strong></h1>
	<%= cool_button('Novo Tipo', new_resource_url) %>
<% end %>

<table class="lista" cellpadding="0" cellspacing="0" width="100%">
  <%- @tipos.each do |tipo|%>
  <tr <%= cycle('', 'class="even"') %>>
    <td width="100%"><%= h tipo.descricao %></td>
    
    <td><%=link_to 'Editar', edit_resource_url(tipo), :class=>'link' %></td>
    <td><%=link_to image_tag('trash.gif'), resource_url(tipo), :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
  <% end %>
</table>
<br/>
