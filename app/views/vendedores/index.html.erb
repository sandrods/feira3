<% content_for :title do %>
	<h1><strong>Vendedores</strong></h1>
	<%= cool_button('Novo Vendedor', new_resource_url) %>
<% end %>

<table class="lista" cellpadding="0" cellspacing="0" width="100%">
  <tr>
  </tr>
  <%- @vendedores.each do |vendedor|%>
  <tr <%= cycle('', 'class="even"') %>>
    <td width="100%"><%= vendedor.nome %></td>
    
    <td><%=link_to 'Editar', edit_resource_url(vendedor), :class=>'link' %></td>
    <td><%=link_to image_tag('trash.gif'), resource_url(vendedor), :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
  <% end %>
</table>
<br/>
